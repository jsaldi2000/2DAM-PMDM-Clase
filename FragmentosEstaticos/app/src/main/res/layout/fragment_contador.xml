<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp"
    tools:context=".ContadorFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvFragmento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fragmento 2:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etTexto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Introduce texto aquí"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tvFragmento2" />


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Letras"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvLetras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de caracteres: 0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="48sp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>