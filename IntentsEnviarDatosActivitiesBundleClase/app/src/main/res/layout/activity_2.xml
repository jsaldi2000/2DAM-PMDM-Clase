<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/tvNombreRecibido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre recibido" />

    <!-- EditText para mostrar la edad recibida -->
    <TextView
        android:id="@+id/tvEdadRecibida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad recibida"
        app:layout_constraintTop_toBottomOf="@id/tvNombreRecibido" />
    <ListView
        android:id="@+id/lvListaRecibida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEdadRecibida"
        android:layout_marginTop="28dp"
        android:padding="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>